        @@media (max-width: 600px) {
            section h3,
            .feature-item h4,
            .about-snippet h3 {
                font-size: 1.3em !important;
            }

            .feature-item p,
            .about-snippet p,
            .about-project-snippet p {
                font-size: 0.98em !important;
            }

            .button-link {
                font-size: 1em !important;
                padding: 0.7em 1.2em !important;
            }

            .about-snippet img.logo-placeholder,
            .about-snippet img {
